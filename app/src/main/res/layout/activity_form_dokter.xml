<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormDokterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_form_photo_identity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Photo Identity"
            android:visibility="gone"
            android:inputType="textCapWords"
            android:paddingHorizontal="3dp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_form_photo_str"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Photo STR"
            android:visibility="gone"
            android:inputType="textCapWords"
            android:paddingHorizontal="3dp"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_form_nama_dokter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nama Lengkap"
                android:inputType="textCapWords"
                android:paddingHorizontal="3dp"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/sp_form_gender_dokter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <Spinner
            android:id="@+id/sp_form_jenis_dokter"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="17dp"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/edt_id_dokter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="17dp"
            android:layout_marginBottom="20dp"
            android:hint="No. Induk Profesi Dokter"
            android:inputType="number"
            android:paddingHorizontal="3dp"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Foto KTP/SIM/Paspor/Identitas Lain"
                android:textColor="@color/colorText" />

            <Button
                android:id="@+id/btn_foto_identitas"
                style="@style/FirebaseUI.Button"
                android:layout_width="72dp"
                android:layout_height="32dp"
                android:background="@drawable/btn_rounded"
                android:paddingVertical="0dp"
                android:text="Pilih"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_identity"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Foto Surat Tanda Registrasi (STR)"
                android:textColor="@color/colorText" />

            <Button
                android:id="@+id/btn_foto_bukti_dokter"
                style="@style/FirebaseUI.Button"
                android:layout_width="72dp"
                android:layout_height="32dp"
                android:background="@drawable/btn_rounded"
                android:paddingVertical="0dp"
                android:text="Pilih"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_str"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_ajukan"
            style="@style/FirebaseUI.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/btn_rounded"
            android:text="Ajukan" />
    </LinearLayout>
</ScrollView>